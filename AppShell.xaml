<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Odev_1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Odev_1"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <MenuItem Text="Kredi Hesaplama" Command="{Binding KrediHesaplamaCommand}" />
    <MenuItem Text="Vücut Kitle İndeksi" Command="{Binding VucutKitleIndeksiCommand}" />
    <MenuItem Text="Renk Seçici" Command="{Binding RenkSeciciCommand}" />
    <MenuItem Text="Yapılacaklar" Command="{Binding YapilacaklarCommand}" />

</Shell>
