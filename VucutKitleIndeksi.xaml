<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev1.VucutKitleIndeksiPage"
             Title="Vücut Kitle İndeksi">

    <StackLayout Padding="20">
        <Label Text="Boy (cm)" />
        <Entry x:Name="BoyEntry" Keyboard="Numeric" />

        <Label Text="Kilo (kg)" />
        <Entry x:Name="KiloEntry" Keyboard="Numeric" />

        <Button Text="Hesapla" Clicked="Button_Hesapla_Clicked" />

        <Label Text="Vücut Kitle İndeksi:" FontSize="Large" />
        <Label x:Name="VKILabel" FontSize="Large" />
    </StackLayout>
</ContentPage>
